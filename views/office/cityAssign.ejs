<html>

<head>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script>
    $(document).ready(function () {
      $.get("http://localhost:3000/city/", function (data, status) {
        //console.log(data);
        for (let city of data) {
          $("#city").append(`<option value='${city.id}'> '${city.name}'</option>`);
        }

      })
      $.get("http://localhost:3000/users/", function (data, status) {
        //console.log(data);
        for (let user of data) {
          $("#user").append(`<option value='${user.id}'> '${user.name}'</option>`);
        }
      })


    });
  </script>

  <% include ../common/head %>
  <link rel="stylesheet" type="text/css" href="../stylesheets/login.css">

</head>

<body class="container">
  <% include ../common/alert %>
  <p>
    <h1>Assign New Manager</h1>
  </p>
  <form action="http://localhost:3000/office/cityAssign" method="POST">
    <label for="City">Cities</label>
    <select class="chosen" name="city" id="city">

    </select>
    <br><br>
    <label for="user">Users</label>
    <select name="user" id="user">

    </select>

    <input type="text" class="demo" id="demo">
    <input type="hidden" id="hidden-field">
    <br><br>
    <input class ="btn btn-primary" type="submit">
  </form>
  <br>
  <br>

</body>
<style>
  h1 {
    margin-left: 4em;
  }

  form {
    margin: 0 auto;
    width: 400px;
    /* To see the outline of the form */
    padding: 1em;
    border: 1px solid #CCC;
    border-radius: 1em;
  }

  form div+div {
    margin-top: 1em;
  }

  label {
    /* To make sure that all labels have the same size and are properly aligned */
    display: inline-block;
    width: 90px;
    text-align: right;
  }

  input,
  textarea {
    /* To make sure that all text fields have the same font settings
         By default, textareas have a monospace font */
    font: 1em sans-serif;

    /* To give the same size to all text fields */
    width: 300px;
    box-sizing: border-box;

    /* To harmonize the look & feel of text field border */
    border: 1px solid #999;
  }

  input:focus,
  textarea:focus {
    /* To give a little highlight on active elements */
    border-color: #000;
  }

  .button {
    /* To position the buttons to the same position of the text fields */
    padding-left: 190px;
    /* same size as the label elements */
  }

  button {
    /* This extra margin represent roughly the same space as the space
         between the labels and their text fields */
    margin-left: 12.0em;
  }
</style>

</html>

