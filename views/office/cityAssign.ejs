<html>

<head>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css" />
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css" />

  <script>
    $(document).ready(function () {
      $.get("http://localhost:3000/city/", function (data, status) {
        //console.log(data);
        for (let city of data) {
          $("#city").append(`<option value='${city.id}'> ${city.name}</option>`);
        }

      })
      $.get("http://localhost:3000/users/", function (data, status) {
        //console.log(data);
        for (let user of data) {
          $("#user").append(`<option value='${user.id}'> ${user.name}</option>`);
        }
      })

    });

  </script>

  <% include ../common/head %>
  <link rel="stylesheet" type="text/css" href="../stylesheets/login.css">

</head>

<body class="container">
  <% include ../common/alert %>
  <p>
    <h1>Assign New Manager</h1>
  </p>
  <form action="http://localhost:3000/office/cityAssign" method="POST">

    <div>
      <label for="user">Users</label>
      <select name="user" id="user">
      </select>
    </div>
    <div>
      <label for="City">Cities</label>
      <select class="chosen" name="city" id="city">
      </select>
    </div>


    <br><br>

    <input type="submit">
  </form>

  <br>
  <br>

</body>

<style>
  .dropbtn {
    background-color: #4CAF50;
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
